{
  "name": "myid-africa-pwa",
  "version": "1.0.0",
  "description": "myID.africa - Digital Identity PWA",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:standalone": "BUILD_STANDALONE=true next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:web": "pm2 web",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "audit:routes": "node scripts/audit-routes.mjs",
    "generate:routes": "node scripts/generate-all-routes.mjs",
    "qa:hsm-profile": "node scripts/qa-hsm-profile.mjs",
    "qa:orchestrator": "npm run qa:hsm-profile && node scripts/orchestrator-proper.mjs",
    "qa:functional": "node scripts/qa-functional.mjs",
    "qa:payload-lab": "node lab/scripts/run-lab.mjs",
    "docs:sync:wikijs": "node scripts/wikijs/sync-partner-docs.mjs",
    "clean": "rm -rf .next node_modules/.cache",
    "postinstall": "echo 'Installation complete. Run npm run dev to start development server.'"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "@simplewebauthn/browser": "^9.0.1",
    "@simplewebauthn/server": "^9.0.3",
    "cbor": "^9.0.2",
    "cose-js": "^0.9.0",
    "idb": "^8.0.0",
    "jose": "^6.1.3",
    "jsqr": "^1.4.0",
    "next": "^14.2.0",
    "next-pwa": "^5.6.0",
    "node-forge": "^1.3.3",
    "node-vault": "^0.10.9",
    "otpauth": "^9.2.3",
    "qrcode": "^1.5.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "@types/node": "^20.12.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "pm2": "^5.3.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
